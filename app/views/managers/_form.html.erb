
<%= form_for @manager do |f| %>
    <%= f.label :name, :required => true  %>
    <%= f.text_field :name %>

    

    <%= f.label :trophies%>
    <%= f.text_field :trophies %>

    <%= f.label :nationality %>
    <%= f.text_field :nationality%>

      <%= f.label :image%>
    <%= f.url_field :image, :required => true %>

    <%= f.label :team_id %>
    <%= f.select :team_id, Team.pluck(:name, :id)%>

    <%= f.submit%>
<%end%>