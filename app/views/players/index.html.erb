<h1>All Players</h1>


   <% @players.each do |player| %>
    
    <%= image_tag player.image, :class =>'thumb' if player.image.present? %>
        <ul>
            <li> Name: <%= link_to player.title, player %></li>
            <li>Team: <%= player.team %></li>
            
        
        </ul>
<% end%>
  
