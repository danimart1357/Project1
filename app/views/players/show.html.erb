<h1><%= @player.title%></h1>

<%= image_tag @player.image, :class => 'feature' %>

<ul>
    <li>Name: <%= @player.title%></li>
    <%if @player.team.present?%>
        <li>Team: <%= link_to @player.team, @player.team%> </li>
   <%end%>
    <li>Trophies: <%= @player.trophy%></li>
    <li>Birthday <%= @player.year%></li>

</ul>

<div class="controls">
<%= link_to "Edit player", edit_player_path(@player)%>
<%= link_to "Delete player", @player, :method=> 'delete' %>
</div>